# ===================================================================
# КОНФИГУРАЦИЯ AI-АССИСТЕНТА (для /home/ai-projects)
# ===================================================================

# Основные пути (относительные - важно!)
AGENT_HOME=/app/data
MODEL_CACHE_PATH=/app/data/models
DOCUMENT_PATH=/app/data/documents
CACHE_PATH=/app/data/cache
VSCODE_PROJECTS_PATH=/app/data/vscode_projects

# GPU настройки (критично для 8GB)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128,garbage_collection_threshold:0.6
OMP_NUM_THREADS=1
TOKENIZERS_PARALLELISM=false

# Параметры модели (оптимизировано для P104-100)
DEFAULT_TEMPERATURE=0.7
CODE_TEMPERATURE=0.3
MAX_NEW_TOKENS=1024
MAX_FILE_TOKENS=1500

# RAG настройки
SEARCH_K=5
SIMILARITY_THRESHOLD=0.75

# Обучение (LoRA для 8GB)
NUM_TRAIN_EPOCHS=3
LORA_R=16
LEARNING_RATE=2e-5

# Производительность
DOCUMENT_BATCH_SIZE=10
REQUEST_DELAY_MS=100

# Безопасность
MAX_FILE_SIZE_MB=50
ENABLE_FILE_VALIDATION=true

# Логирование
LOG_LEVEL=INFO
TRAINING_VERBOSE=true
SAVE_CHECKPOINTS=true
